<% @user.last_three_posts.each do |post| %>
  <%= link_to user_post_path(@user, post) do %>
    <div class="single-user-single-post">
      <h3><strong><%= post.title %></strong></h3>
      <p>[Post <%= post.id %>]</p>
      <p><%= post.text %></p><br>
      <span>💬Comments: <%= post.comments_counter %></span>
      <span>❤️Likes: <%= post.likes_counter %></span>
    </div>
  <% end %>
<% end %>