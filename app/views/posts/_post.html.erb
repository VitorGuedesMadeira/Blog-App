<% @user.last_three_posts.each do |post| %>
    <div class="single-user-single-post">
      <%= link_to user_post_path(@user, post), class: "link" do %>
        <div>
          <p>[Post <%= post.id %>]</p>
          <h3><strong><%= post.title %></strong></h3>
        </div>
      <% end %>

      <p>
        <%= post.text %>
      </p><br>
      
      <div>
        <span>💬Comments: <%= post.comments_counter %></span>
        <span>❤️Likes: <%= post.likes_counter %></span>
      </div>

      <% if can? :destroy, post %>
        <%= form_with model: post, url: user_post_path(@user, post), method: :delete do |form| %>
          <%= form.submit "Delete", class: "delete-button" %>
        <% end %>
      <% end %>
    </div>
<% end %>