<main class='login-page'>
  <div class='login-box'>
    <div class='login-welcome'>
      <h2>Welcome back!</h2>
      <p>You can sign in to access with your existing account.</p>
    </div>
    <div class='login-inputs'>
      <h2>Sign in</h2>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email", placeholder: 'User email' %>
        </div>
      
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", class: "password", placeholder: 'Password' %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "Sign in", class: 'sign-in-button' %>
        </div>
      <% end %>
      
      <div class="login-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</main>
